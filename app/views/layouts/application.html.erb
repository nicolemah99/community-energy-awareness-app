<!DOCTYPE html>
<html>
	<head>
		<title>Community Energy Awareness</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= include_gon %>
		<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
		<%= javascript_importmap_tags %>
		<%= yield(:head) %>
		<%= favicon_link_tag asset_path('ACEP-logo.png') %>
		<!-- Bootstrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<!-- Fonts and icons -->
		<link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
		<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
		<link rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	</head>
	<body>
		<div class="container-fluid p-0">
			<div class="row m-0">
				<div class="col-2 p-0 sidebar">
					<%= render partial: "shared/sidebar" %>
				</div>
				<div class="col-10 p-0" id="main-container">
					<div class="row m-0 text-center sticky-top">
						<%= render partial: "shared/header" %>
					</div>
						<%= render partial: "shared/navbar" %>
					<div class="row p-0 m-0">
					<div class="container-fluid m-0 p-3 text-center">
						<%= yield %>
					</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>

<script>
	document.addEventListener("DOMContentLoaded", checkScreenSize());
	document.addEventListener("resize", checkScreenSize());

	function checkScreenSize() {
		var screenWidth = window.innerWidth; // Get the current screen width
		var main = document.getElementById('main-container'); // Select the element
		var sidebar = document.getElementById('sidebar-column');

		if (screenWidth <= 768) {
			main.classList.add('col-auto'); // Add class if screen size is less than 768px
			main.classList.remove('col-10'); // Remove class if screen size is 768px or larger
		}
	}

	var slideMenu = document.getElementById("slide-menu");
	var hamburgerBtn = document.getElementById("hamburger-btn");
	var isMenuOpen = false;

	hamburgerBtn.addEventListener("click", function () {
		if (isMenuOpen) {
			slideMenu.style.left = "-110%";
		} else {
			slideMenu.style.left = "0";
		}
		isMenuOpen = !isMenuOpen;
	});





</script>